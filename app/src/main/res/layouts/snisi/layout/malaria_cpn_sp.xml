<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

        <TextView
            style="@style/textViewLabel"
            android:id="@+id/sp1Label"
            android:text="@string/malaria_total_anc1_sp1"
            android:background="@drawable/abc_ab_share_pack_holo_light" />
        <EditText
            style="@style/editNumberText"
            android:nextFocusRight="@+id/malariaTotalMalariaCasesField"
            android:nextFocusDown="@+id/malariaTotalMalariaCasesField"
            android:id="@+id/anc1Field"
            android:imeOptions="actionNext"
            android:hint="@string/malaria_total_anc_1"/>
        <EditText
            style="@style/editNumberText"
            android:nextFocusRight="@+id/malariaTotalMalariaCasesField"
            android:nextFocusDown="@+id/malariaTotalMalariaCasesField"
            android:id="@+id/sp1Field"
            android:imeOptions="actionNext"
            android:hint="@string/malaria_total_sp_1"/>
        <EditText
            style="@style/editNumberText"
            android:nextFocusRight="@+id/malariaTotalMalariaCasesField"
            android:nextFocusDown="@+id/malariaTotalMalariaCasesField"
            android:id="@+id/sp2Field"
            android:imeOptions="actionDone"
            android:hint="@string/malaria_total_sp_2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_monthly_save"
            android:id="@+id/saveButton"
            android:layout_marginTop="10dp" />
    </LinearLayout>