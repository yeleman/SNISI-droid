<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SNISI" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:orientation="vertical">

       <TextView
            android:text="@string/app_name_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appLongNameLabel"
            android:linksClickable="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="10dp"
           android:gravity="center|center_vertical" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nutrition_app_label"
            android:id="@+id/nutritionButton"
            android:layout_margin="10dp" />
        <Button
            android:text="@string/malaria_app_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pnlpButton"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/smir_app_label"
            android:id="@+id/smirButton"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/website_goto_label"
            android:id="@+id/webSiteButton"
            android:layout_margin="10dp" />

    </LinearLayout>

</ScrollView>