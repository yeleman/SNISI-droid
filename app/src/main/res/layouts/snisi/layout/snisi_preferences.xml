<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <PreferenceCategory android:title="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditTextPreference
            android:title="@string/pref_server_num"
            android:summary="@string/pref_server_num_summary"
            android:key="serverPhoneNumber"
            android:inputType="number"
            android:ems="10"
            android:defaultValue="70062552"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      <EditTextPreference
            android:title="@string/pref_username"
            android:summary="@string/pref_username_summary"
            android:singleLine="true"
            android:key="username"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/nutrition_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBoxPreference
            android:title="@string/pref_is_urenam"
            android:summary="@string/pref_is_urenam_summary"
            android:key="hc_is_urenam"/>
        <CheckBoxPreference
            android:title="@string/pref_is_urenas"
            android:summary="@string/pref_is_urenas_summary"
            android:key="hc_is_urenas"/>
        <CheckBoxPreference
            android:title="@string/pref_is_ureni"
            android:summary="@string/pref_is_ureni_summary"
            android:key="hc_is_ureni"/>
    </PreferenceCategory>
</PreferenceScreen>
