<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_u5_label"
            android:id="@+id/u5ReportButton"
            android:padding="10dp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_o5_label"
            android:id="@+id/o5ReportButton"
            android:padding="10dp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_pw_label"
            android:id="@+id/pwReportButton"
            android:padding="10dp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_stockout_label"
            android:id="@+id/stockoutReportButton"
            android:padding="10dp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_submit_button"
            android:id="@+id/SubmitButton"
            android:padding="10dp"
            android:layout_margin="10dp" />

    </LinearLayout>
</ScrollView>
