<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/actChildrenLabel"
                android:text="@string/malaria_stockout_act_children"
                android:background="@drawable/abc_ab_share_pack_holo_light"/>
            <RadioGroup
                android:id="@+id/radioGroupChildren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OUI"
                    android:id="@+id/actChildrenYesField"
                    android:checked="false"
                    android:layout_marginRight="70dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/actChildrenNoField"
                    android:layout_weight="0.11" />

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/actYouthLabel"
                android:text="@string/malaria_stockout_act_youth"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupYouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/actYouthYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/actYouthNoField"
                    android:layout_weight="0.50" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/adultLabel"
                android:text="@string/malaria_stockout_act_adult"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/adultYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/adultNoField"
                    android:layout_weight="0.50"  />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/artemetherLabel"
                android:text="@string/malaria_stockout_artemether"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupArtemether"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/artemetherYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/artemetherNoField"
                    android:layout_weight="0.50" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/quinineLabel"
                android:text="@string/malaria_stockout_quinine"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupQuinine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/quinineYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/quinineNoField"
                    android:layout_weight="0.50" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/serumLabel"
                android:text="@string/malaria_stockout_serum"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupSerum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/serumYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/serumNoField"
                    android:layout_weight="0.50"  />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/bednetLabel"
                android:text="@string/malaria_stockout_bednet"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupBednet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/bednetYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/bednetNoField"
                    android:layout_weight="0.50" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/textViewLabel"
                android:id="@+id/rdtLabel"
                android:text="@string/malaria_stockout_rdt"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
            <RadioGroup
                android:id="@+id/radioGroupRdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/rdtYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/rdtNoField"
                    android:layout_weight="0.50"  />
            </RadioGroup>

            <TextView
                style="@style/textViewLabel"
                android:id="@+id/spLabel"
                android:text="@string/malaria_stockout_sp"
                android:background="@drawable/abc_ab_share_pack_holo_light" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroupSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:id="@+id/spYesField"
                    android:layout_weight="0.50"
                    android:layout_marginRight="70dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:id="@+id/spNoField"
                    android:layout_weight="0.50" />
            </RadioGroup>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_monthly_save"
            android:id="@+id/saveButton"
            android:layout_margin="10dp" />

    </LinearLayout>
</ScrollView>