<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_total_death"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:nextFocusRight="@+id/totalDeathO5Field"
                android:nextFocusDown="@+id/totalDeathO5Field"
                android:id="@+id/totalDeathU5Field"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_u5"
                android:singleLine="false"
                android:editable="true"
                android:layout_weight="0.50" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:nextFocusRight="@+id/totalDeathPwField"
                android:nextFocusDown="@+id/totalDeathPwField"
                android:id="@+id/totalDeathO5Field"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_o5"
                android:singleLine="false"
                android:editable="true"
                android:layout_weight="0.50" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:nextFocusRight="@+id/totalMalariaDeathU5Field"
                android:nextFocusDown="@+id/totalMalariaDeathU5Field"
                android:id="@+id/totalDeathPwField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_pw"
                android:singleLine="false"
                android:editable="true"
                android:layout_weight="0.50" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_total_malaria_death"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:nextFocusRight="@+id/totalMalariaDeathO5Field"
                android:nextFocusDown="@+id/totalMalariaDeathO5Field"
                android:id="@+id/totalMalariaDeathU5Field"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_u5"
                android:singleLine="false"
                android:editable="true"
                android:layout_weight="0.50" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:nextFocusRight="@+id/totalMalariaDeathPwField"
                android:nextFocusDown="@+id/totalMalariaDeathPwField"
                android:id="@+id/totalMalariaDeathO5Field"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_o5"
                android:singleLine="false"
                android:editable="true"
                android:layout_weight="0.50" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:nextFocusRight="@+id/testedCaseU5Field"
                android:nextFocusDown="@+id/testedCaseU5Field"
                android:id="@+id/totalMalariaDeathPwField"
                android:imeOptions="actionDone"
                android:hint="@string/malaria_pw"
                android:singleLine="false"
                android:editable="true"
                android:layout_weight="0.50" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_monthly_save"
            android:id="@+id/saveButton"
            android:layout_margin="10dp" />
    </LinearLayout>
</ScrollView>