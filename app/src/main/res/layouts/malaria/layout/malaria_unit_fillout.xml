<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            style="@style/textViewLabel"
            android:text="@string/malaria_consultation_label" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/malariaTotalMalariaCasesField"
                android:nextFocusDown="@+id/malariaTotalMalariaCasesField"
                android:id="@+id/malariaTotalConsultationField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_consultation"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/malariaTotalTestedMalariaCasesField"
                android:nextFocusDown="@+id/malariaTotalTestedMalariaCasesField"
                android:id="@+id/malariaTotalMalariaCasesField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_malaria_cases" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/malariaTotalTestedMalariaCasesLinearLayout">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/malariaTotalConfirmedMalariaCasesField"
                android:nextFocusDown="@+id/malariaTotalConfirmedMalariaCasesField"
                android:id="@+id/malariaTotalTestedMalariaCasesField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_tested_malaria_cases" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/malariaTotalConfirmedMalariaCasesLinearLayout">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/malariaTotalSimpleMalariaCasesField"
                android:nextFocusDown="@+id/malariaTotalSimpleMalariaCasesField"
                android:id="@+id/malariaTotalConfirmedMalariaCasesField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_confirmed_malaria_cases"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/malariaTotalSimpleMalariaCasesLinearLayout">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/malariaTotalSevereMalariaCasesField"
                android:nextFocusDown="@+id/malariaTotalSevereMalariaCasesField"
                android:id="@+id/malariaTotalSimpleMalariaCasesField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_simple_malaria_cases"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/malariaTotalSevereMalariaCasesLinearLayout">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/malariaTotalActtreatedMalariaCasesField"
                android:nextFocusDown="@+id/malariaTotalActtreatedMalariaCasesField"
                android:id="@+id/malariaTotalSevereMalariaCasesField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_severe_malaria_cases" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/malariaTotalActtreatedMalariaCasesLinearLayout">
            <EditText
                style="@style/editNumberText"
                android:id="@+id/malariaTotalActtreatedMalariaCasesField"
                android:nextFocusRight="@+id/malariaTotalInpatientField"
                android:nextFocusDown="@+id/malariaTotalInpatientField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_acttreated_malaria_cases"/>
        </LinearLayout>

        <TextView
            style="@style/textViewLabel"
            android:text="@string/malaria_inpatient_label" />
        <!-- hospitalisation -->    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/editNumberText"
                android:id="@+id/malariaTotalInpatientField"
                android:nextFocusRight="@+id/malariaTotalMalariaInpatientField"
                android:nextFocusDown="@+id/malariaTotalMalariaInpatientField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_inpatient"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/editNumberText"
                android:id="@+id/malariaTotalMalariaInpatientField"
                android:nextFocusRight="@+id/malariaTotalDeathField"
                android:nextFocusDown="@+id/malariaTotalDeathField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_malaria_inpatient" />
        </LinearLayout>
        <!-- Décès -->
        <TextView
            style="@style/textViewLabel"
            android:text="@string/malaria_death_label" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/editNumberText"
                android:id="@+id/malariaTotalDeathField"
                android:nextFocusRight="@+id/malariaTotalMalariaDeathField"
                android:nextFocusDown="@+id/malariaTotalMalariaDeathField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_death" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/editNumberText"
                android:id="@+id/malariaTotalMalariaDeathField"
                android:nextFocusRight="@+id/malariaTotalDistributedBednetsField"
                android:nextFocusDown="@+id/malariaTotalDistributedBednetsField"
                android:imeOptions="actionNext"
                android:hint="@string/malaria_total_malaria_death"/>
        </LinearLayout>
        <!-- MILD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/distributed_bednetsLinearLayout">
            <EditText
                style="@style/editNumberText"
                android:nextFocusRight="@+id/totalMILDPwField"
                android:nextFocusDown="@+id/totalMILDPwField"
                android:id="@+id/malariaTotalDistributedBednetsField"
                android:imeOptions="actionDone"
                android:hint="@string/malaria_total_distributed_bednets" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/malaria_monthly_save"
            android:id="@+id/saveButton"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>

