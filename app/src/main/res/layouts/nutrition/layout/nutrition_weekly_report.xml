<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".NutritionHome" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutURENAM"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                style="@style/textViewLabel"
                android:id="@+id/levelLabelURENAM"
                android:text="@string/nutrition_weekly_urenam" />
            <EditText
                style="@style/editNumberText"
                android:id="@+id/screeningURENAMField"
                android:nextFocusRight="@+id/casesURENAMField"
                android:nextFocusDown="@+id/casesURENAMField"
                android:imeOptions="actionNext"
                android:hint="@string/nutrition_weekly_screening"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutFMURENAM"
                android:orientation="horizontal">

                <EditText
                    style="@style/editNumberText050"
                    android:id="@+id/casesURENAMField"
                    android:nextFocusRight="@+id/deathsURENAMField"
                    android:nextFocusDown="@+id/deathsURENAMField"
                    android:imeOptions="actionNext"
                    android:hint="@string/nutrition_weekly_cases" />
                <EditText
                    style="@style/editNumberText050"
                    android:id="@+id/deathsURENAMField"
                    android:nextFocusRight="@+id/screeningURENASField"
                    android:nextFocusDown="@+id/screeningURENASField"
                    android:imeOptions="actionNext"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="@string/nutrition_weekly_deaths" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutURENAS"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                style="@style/textViewLabel"
                android:id="@+id/levelLabelURENAS"
                android:text="@string/nutrition_weekly_urenas" />
            <EditText
                style="@style/editNumberText"
                android:id="@+id/screeningURENASField"
                android:nextFocusRight="@+id/casesURENASField"
                android:nextFocusDown="@+id/casesURENASField"
                android:imeOptions="actionNext"
                android:hint="@string/nutrition_weekly_screening"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutFMURENAS"
                android:orientation="horizontal">

                <EditText
                    style="@style/editNumberText050"
                    android:id="@+id/casesURENASField"
                    android:nextFocusRight="@+id/deathsURENASField"
                    android:nextFocusDown="@+id/deathsURENASField"
                    android:imeOptions="actionNext"
                    android:hint="@string/nutrition_weekly_cases" />
                <EditText
                    style="@style/editNumberText050"
                    android:id="@+id/deathsURENASField"
                    android:nextFocusRight="@+id/screeningURENIField"
                    android:nextFocusDown="@+id/screeningURENIField"
                    android:imeOptions="actionNext"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="@string/nutrition_weekly_deaths" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutURENI"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                style="@style/textViewLabel"
                android:id="@+id/levelLabelURENI"
                android:text="@string/nutrition_weekly_ureni" />
            <EditText
                style="@style/editNumberText"
                android:id="@+id/screeningURENIField"
                android:nextFocusRight="@+id/casesURENIField"
                android:nextFocusDown="@+id/casesURENIField"
                android:imeOptions="actionNext"
                android:hint="@string/nutrition_weekly_screening"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutFMURENI"
                android:orientation="horizontal">

                <EditText
                    style="@style/editNumberText050"
                    android:id="@+id/casesURENIField"
                    android:nextFocusRight="@+id/deathsURENIField"
                    android:nextFocusDown="@+id/deathsURENIField"
                    android:imeOptions="actionNext"
                    android:hint="@string/nutrition_weekly_cases" />
                <EditText
                    style="@style/editNumberText050"
                    android:id="@+id/deathsURENIField"
                    android:imeOptions="actionDone"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="@string/nutrition_weekly_deaths" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nutrition_weekly_save_submit"
            android:id="@+id/saveAndSubmitButton"
            android:layout_margin="5dp" />
    </LinearLayout>
</ScrollView>
