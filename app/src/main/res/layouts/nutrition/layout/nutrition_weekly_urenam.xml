<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SNISI" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/levelLabel"
            android:linksClickable="false"
            android:text="@string/nutrition_weekly_urenam"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/screeningField"
            android:imeOptions="actionNext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/nutrition_weekly_screening"
            android:singleLine="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:orientation="horizontal">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/casesField"
                android:imeOptions="actionNext"
                android:hint="@string/nutrition_weekly_cases"
                android:singleLine="false" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/deathsField"
                android:imeOptions="actionNext"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:hint="@string/nutrition_weekly_deaths"
                android:singleLine="false" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>